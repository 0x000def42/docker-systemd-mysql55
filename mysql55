[Unit]
Description=Mysql 5.5 dockerized serivice
After=docker.service
Requires=docker.service
Documentation=https://github.com/0x000def42/docker-systemd-mysql55

[Service]
Type=simple 
TimeoutSec=30
ExecStart=/usr/bin/docker run -p 3306:3306 -v mysql55.service.data:/var/lib/mysql --rm --name %n --env MYSQL_ROOT_PASSWORD=root %n
ExecStop=/usr/bin/docker stop %n
ExecReload=/usr/bin/docker restart %n

[Install]
WantedBy=multi-user.target